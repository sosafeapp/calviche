{
  "compilerOptions": {
    "preserveConstEnums": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "allowJs": false,
    "target": "ES2020",
    "moduleResolution": "node",
    "lib": [
      "ES2020"
    ],
    "outDir": "dist",
    "rootDir": "src",
    "module": "commonjs"
  },
  "include": [
    "./src/**/*.ts"
  ]
}

